<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1 class="bg-primary text-center p25">
        Bootstrapped!
      </h1>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Lat</th>
            <th scope="col">Long</th>
            <th scope="col" class="w25p">Address</th>
            <th scope="col">Distance(mi)</th>
          </tr>
        </thead>
        <tbody>
          <% addresses.sort.each_with_index do |a, i| %>
            <tr>
              <td scope="row"><%= i + 1 %></td>
              <td><%= a.lat %></td>
              <td><%= a.lng %></td>
              <td><%= a.full_address %></td>
              <td><%= a.miles_to(location: nil)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
